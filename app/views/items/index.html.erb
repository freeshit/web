<h1>Listing items</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Image url</th>
    <th>Lat</th>
    <th>Lon</th>
    <th>User</th>
    <th>Tracker count</th>
    <th>Claimed</th>
    <th>Claimed at</th>
    <th>Claimer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.description %></td>
    <td><%= item.image_url %></td>
    <td><%= item.lat %></td>
    <td><%= item.lon %></td>
    <td><%= item.user_id %></td>
    <td><%= item.tracker_count %></td>
    <td><%= item.claimed %></td>
    <td><%= item.claimed_at %></td>
    <td><%= item.claimer_id %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

